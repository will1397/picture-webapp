<!DOCTYPE HTML>
<html>
<head>
    <% include ../partials/head.ejs %>
</head>
<body id="body-login">

    <header><% include ../partials/header.ejs %></header>

    <div class="container card" id="signup-container">
        <form action="/login" method="POST" enctype="multipart/form-data" id="contact_form">
            <fieldset>

                <!-- Form Name -->
                <legend><h2><b>Login</b></h2></legend><br>

                <div class="form-group">
                    <label for="exampleInputPassword1">Username</label>
                    <input type="text" name="user" id="exampleInputPassword1" placeholder="Username" required>
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" name="pass" id="exampleInputPassword1" placeholder="Password" required>
                </div>

                <!-- Button -->
                <div class="form-group" id="submit-button">
                    <label class="control-label"></label>
                    <div class="">
                        <button type="submit" class="btn btn-dark">SUBMIT <i class="fas fa-sign-in-alt"></i></button>
                    </div>
                </div>

                <!-- Error Message -->
                <p><%= msg %></p>

            </fieldset>
        </form>
    </div>
</body>